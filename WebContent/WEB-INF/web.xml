<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" id="WebApp_ID" version="4.0">
  <display-name>WebShop</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.htm</welcome-file>
    <welcome-file>default.jsp</welcome-file>
  </welcome-file-list>
	<filter>
    	<filter-name>AdminFilter</filter-name>
    	<filter-class>roleFilter.AdminFilter</filter-class>
    	<init-param>
        	<param-name>active</param-name>
        	<param-value>true</param-value>
    	</init-param>
	</filter>
	<filter-mapping>
    	<filter-name>AdminFilter</filter-name>
    	<url-pattern>/testingSite.jsp</url-pattern>
    	<url-pattern>/adminPage.jsp</url-pattern>
    	<url-pattern>/admin/adminOrder.jsp</url-pattern>
    	<url-pattern>/GetOrder</url-pattern>
    	<url-pattern>/SetOrder</url-pattern>
	</filter-mapping>
	<filter>
    	<filter-name>GuestFilter</filter-name>
    	<filter-class>roleFilter.GuestFilter</filter-class>
	</filter>
	<filter-mapping>
    	<filter-name>GuestFilter</filter-name>
    	<url-pattern>/myProfile.jsp</url-pattern>
    	<url-pattern>/editProfile.jsp</url-pattern>
    	<url-pattern>/editPassword.jsp</url-pattern>
    	<url-pattern>/AddSpec</url-pattern>
    	<url-pattern>/CreateCategory</url-pattern>
    	<url-pattern>/CreateProduct</url-pattern>
    	<url-pattern>/DeleteUser</url-pattern>
    	<url-pattern>/GetUsersInfo</url-pattern>
    	<url-pattern>/SetOrder</url-pattern>
    	<url-pattern>/SetProduct</url-pattern>
    	<url-pattern>/SetProductsSpecs</url-pattern>
    	<url-pattern>/SetUsersInfo</url-pattern>
    	<url-pattern>/SetUsersPassword</url-pattern>
	</filter-mapping>
	<filter>
    	<filter-name>UserFilter</filter-name>
    	<filter-class>roleFilter.UserFilter</filter-class>
	</filter>
	<filter-mapping>
    	<filter-name>UserFilter</filter-name>
    	<url-pattern>/signUp.jsp</url-pattern>
    	<url-pattern>/login.jsp</url-pattern>
	</filter-mapping>
</web-app>